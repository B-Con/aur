# Maintainer: Brad Conte <brad AT bradconte.com>

pkgname=ntl
pkgver=6.1.0
pkgrel=1
#epoch=
pkgdesc="A Library for doing Number Theory"
arch=('i686' 'x86_64')
url="http://www.shoup.net/ntl/"
license=('GPL')
groups=()
depends=('gf2x' 'gmp')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=('!libtool')
#install=
#changelog=
source=("http://www.shoup.net/${pkgname}/${pkgname}-${pkgver}.tar.gz")
noextract=()
sha512sums=('8c013bd4a250c8e29d57864585492be1f392c84356959d8100d5c45b420e411e5cd677524e2d50bbe265dda4c364185395780ba5d8490f6ac46da73c6a9728de')

#prepare() {
#}

build() {
	cd "$srcdir/$pkgname-$pkgver/src"
	./configure DEF_PREFIX=/usr SHARED=on NTL_GF2X_LIB=on NTL_GMP_LIP=on || return 1
	make
}

check() {
	cd "$srcdir/$pkgname-$pkgver/src"
	make -k check
}

package() {
	cd "$srcdir/$pkgname-$pkgver/src"
	make PREFIX="$pkgdir/usr" install
}
